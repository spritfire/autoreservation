<Window x:Class="AutoReservation.Client.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoReservation.Client.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Kunden"/>
            <ListBox ItemsSource="{Binding KundenListe}"/>

            <TabItem Header="Autos"/>
            <ListBox ItemsSource="{Binding AutoListe}"/>
            
            <TabItem Header="Reservationen"/>
            <ListBox ItemsSource="{Binding ReservationsListe}"/>
        </TabControl>
    </Grid>
</Window>
